<odoo>
  <record id="view_move_form_inherit_vendor_project" model="ir.ui.view">
    <field name="name">account.move.form.inherit.vendor.project</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Insert new tab after the "Accounting" tab -->
      <xpath expr="//page[@name='other_info']/group[@id='other_tab_group']/group[@name='accounting_info_group']" position="after">
        <group string="Invoice Information" name="invoice_information_group">
          <field name="vendor_id" options="{'no_open': True, 'no_create': True}"/>
          <field name="project_id" options="{'no_open': True, 'no_create': True}"/>
        </group>
      </xpath>
    </field>
  </record>
  
</odoo>