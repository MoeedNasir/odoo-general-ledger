<odoo>
    <record id="view_order_form_inherit_vendor" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vendor</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Target the payment_term_id field and insert vendor_id right after -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="vendor_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>
    <record id="view_move_line_tree_inherit_project" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit.project</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="project_id" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
